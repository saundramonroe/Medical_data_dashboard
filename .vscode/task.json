{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Streamlit Dashboard",
            "type": "shell",
            "command": "streamlit",
            "args": ["run", "dashboard/streamlit_app.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Start PyScript Dashboard",
            "type": "shell",
            "command": "echo 'Right-click dashboard/index.html and select Open with Live Server'",
            "group": "build"
        }
    ]
}